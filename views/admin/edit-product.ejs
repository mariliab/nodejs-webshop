<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (isAuthenticated) { %>
        <h1>Edit <%= product.title %></h1>
        <form id="add-product" class="form-white-bg" action="/admin/edit-product" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="row">
                <div class="lg-col-6 xs-col-12">
                    <div class="form-control">
                        <input type="text" id="title" name="title" placeholder="Title" value="<%= product.title %>">
                    </div>
                    <div class="form-control">
                        <input type="text" id="image" name="image" placeholder="Image url" value="<%= product.image %>"> 
                    </div>
                    <div class="form-control">
                        <input type="number" id="price" name="price" placeholder="Price" value="<%= product.price %>"> 
                    </div>
                </div>
                <div class="lg-col-6 xs-col-12">
                    <div class="form-control">
                        <textarea id="description" name="description" placeholder="Description" rows="5"> <%= product.description %> </textarea>
                    </div>
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <button class="primary" type="submit">Save</button>
                </div>
            </div>
        </form>
        <% } else { %>
            <p>Du måste logga in för att se detta</p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>