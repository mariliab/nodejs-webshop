<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (isAuthenticated) { %>
        <h1>Add product</h1>
        <form id="add-product" class="form-white-bg" action="/admin/add-product" method="POST">
            <div class="row">
                <div class="lg-col-6 xs-col-12">
                    <div class="form-control">
                        <input type="text" id="title" name="title" placeholder="Title">
                    </div>
                    <div class="form-control">
                        <input type="text" id="image" name="image" placeholder="Image url"> 
                    </div>
                    <div class="form-control">
                        <input type="number" id="price" name="price" placeholder="Price"> 
                    </div>
                </div>
                <div class="lg-col-6 xs-col-12">
                    <div class="form-control">
                        <textarea id="description" name="description" placeholder="Description" rows="5"></textarea>
                    </div>
                    <button class="primary" type="submit">Add Product</button>
                </div>
            </div>
        </form>
        <% } else { %>
            <p>Du måste logga in för att se detta</p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>