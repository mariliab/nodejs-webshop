<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="page-header">
            <div>
                <h1>Products</h1>
            </div>
            <div class="link-button-wrapper">
                <a class="primary-cta" href="/admin/add-product">Add product</a>
            </div>
        </div>
        <% if (products.length > 0) { %>
            <div class="product-grid-wrapper">
                <ul class="product-grid">
                    <% for (let product of products) { %>
                        <li class="product-item">
                            <h4><%= product.title %></h4>
                            <p><%= product.price %> kr</p>
                            <div>
                                <form action="admin/edit-product" method="POST">
                                    <button class="btn-link edit-product" type="submit">Edit</button>
                                </form>
                                <form action="admin/delete-product" method="POST">
                                    <button class="btn-link delete-product" type="submit">Delete</button>
                                </form>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        <% } else { %>
            <p>No products yet..</p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>