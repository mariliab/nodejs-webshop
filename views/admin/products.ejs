<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="page-header">
            <div>
                <h1>Products</h1>
            </div>
            <div class="link-button-wrapper">
                <a class="primary-cta" href="/admin/add-product">Add product</a>
            </div>
        </div>
        <% if (products.length > 0) { %>
                <table class="product-grid">
                    <tr>
                      <th>Title</th>
                      <th>Price</th>
                      <th>Actions</th>
                    </tr>
                    <% for (let product of products) { %>
                        <tr class="product-item">
                            <td><p class="product-title"><%= product.title %></p></td>
                            <td><p><%= product.price %> kr</p></td>
                            <td>                           <div>
                                <form action="admin/edit-product" method="POST">
                                    <button class="btn-link edit-product" type="submit">Edit</button>
                                </form>
                                <form action="admin/delete-product" method="POST">
                                    <button class="btn-link delete-product" type="submit">Delete</button>
                                </form>
                            </div></td>
                            </tr>
                    <% } %>
                  </table>
        <% } else { %>
            <p>No products yet..</p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>