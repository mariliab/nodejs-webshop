<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="row product-detail">
            <div class="lg-col-6 xs-col-12 product-detail-image">
                <img src="<%= product.image %>" alt="<%= product.title %>"></img>
            </div>
            <div class="lg-col-6 xs-col-12 product-detail-information">
                <h1 class="product-title"><%= product.title %> <span class="product-price"><%= product.price %> SEK</span></h1>
                <p class="product-detail-description"><%= product.description %>   
                </p>
                <button class="see-more-button">See more</button>
                <form action="/shop/add-to-cart" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button class="primary" type="submit">Add to cart</button>
                    <input type="hidden" name="productId" value="<%= product._id %>">
                </form>
            </div>
        </div>
    </main>
    
<script src="/js/product.js"></script>
<%- include('../includes/end.ejs') %>